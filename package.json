{
  "name": "@crkn-rcdr/nano",
  "version": "1.0.1",
  "description": "Boilerplate for invoking apache/couchdb-nano",
  "contributors": [
    "Sascha Adler <sadler@crkn.ca> (https://github.com/SaschaAdler)"
  ],
  "keywords": [
    "couchdb",
    "couchdb-nano",
    "nano"
  ],
  "bugs": {
    "url": "https://github.com/crkn-rcdr/nano/issues"
  },
  "homepage": "https://github.com/crkn-rcdr/nano",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crkn-rcdr/nano.git"
  },
  "license": "CC0-1.0",
  "main": "dist/Nano.js",
  "types": "dist/Nano.d.ts",
  "scripts": {
    "test": "mocha",
    "build": "npm test && tsc",
    "release": "HUSKY=0 standard-version",
    "prepublishOnly": "pinst --disable",
    "postinstall": "husky install",
    "postpublish": "pinst --enable"
  },
  "engines": {
    "node": ">= 10.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.31",
    "chai": "^4.3.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^5.1.1",
    "mocha": "^8.3.0",
    "pinst": "^2.1.6",
    "standard-version": "^9.1.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "nano": "^9.0.3"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "src/**/*.test.ts",
    "require": "ts-node/register"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
